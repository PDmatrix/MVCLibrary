@using PagedList
@using PagedList.Mvc
@model IEnumerable<Pract.Models.Book>

@{
    ViewBag.Title = "Список книг";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Книги</h2>

<table class="table table-hover">
    <thead>
    <tr>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(model => model.Author)</th>
        <th></th>
    </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new {id = item.Id}, new {@class = "btn btn-edit"}) |
                @Html.ActionLink("Удалить", "Delete", new {id = item.Id}, new {@class = "btn btn-delete"})
            </td>
        </tr>
    }

</table>
<div class="btn-group">
    @Html.PagedListPager((IPagedList)Model, page => Url.Action(ViewContext.RouteData.Values["action"].ToString(), new { page }))
</div>
<br />
@Html.ActionLink("Добавить", "Create", null, htmlAttributes: new { @class = "btn btn-create" })