@model Pract.Models.UserManagementViewModel

@{
    ViewBag.Title = "Удалить пользователя";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Удалить пользователя</h2>

<h3>Вы действительно хотите удалить пользователя?</h3>
<div>
    <hr />
    @Html.HiddenFor(model => model.Id)
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Username)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Username)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-delete" /> |
            @Html.ActionLink("Вернуться обратно", "Index", null, htmlAttributes: new { @class = "btn btn-back" })
        </div>
    }
</div>
