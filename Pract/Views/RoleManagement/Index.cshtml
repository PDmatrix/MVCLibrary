@model IEnumerable<Pract.Models.RoleManagementViewModel>

@{
    ViewBag.Title = "Список ролей";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Список ролей</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }, new { @class = "btn btn-edit" }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id }, new { @class = "btn btn-delete" })
            </td>
        </tr>
    }
</table>

<div>
    @Html.ActionLink("Добавить", "Create", null, htmlAttributes: new { @class = "btn btn-create" })
</div>
<br />
<div>
    @Html.ActionLink("Вернуться обратно", "Index", "Administration", null, htmlAttributes: new { @class = "btn btn-back" })
</div>
